<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender"
    name="OTEL">
  </appender>

  <include resource="org/springframework/boot/logging/logback/base.xml"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="OTEL"/>
  </root>
</configuration>